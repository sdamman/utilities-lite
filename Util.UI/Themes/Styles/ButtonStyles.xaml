            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="borderDisabled" Property="Visibility" Value="Visible" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

