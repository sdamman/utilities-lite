    <Setter Property="BorderBrush" Value="{theme:ThemeResource ResourceKey=BasicGreyButtonBorder}" />
    <Setter Property="Foreground" Value="{theme:ThemeResource ResourceKey=BasicGreyButtonForeground}" />
